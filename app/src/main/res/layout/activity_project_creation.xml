<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Projects.ProjectCreation">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/bold"
            android:text="Start Creating"
            android:textSize="30sp" />

        <View
            android:id="@+id/divider4"
            android:layout_width="191dp"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:background="@color/dark_magenta" />

        <EditText
            android:id="@+id/edtProjectName"
            android:layout_width="300sp"
            android:layout_height="30sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_field"
            android:ems="10"
            android:hint="Project Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtProjectDescription"
            android:layout_width="300sp"
            android:layout_height="80sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_field"
            android:ems="10"
            android:hint="Description"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/sprProjCategory"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/spinner" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Progress"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rgpProgress"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">


                    <RadioButton
                        android:id="@+id/rbtIdeation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:text="Ideation"
                        android:textColor="#FE635D5D"
                        android:textColorLink="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/rbtInDevelopment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:text="In Development"
                        android:textColor="#595050" />

                    <RadioButton
                        android:id="@+id/rbtComplete"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:text="Complete"
                        android:textColor="#595050" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Funding"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rgpFunding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/rbtRS"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:text="Requires Sponsorship"
                        android:textColor="#595050" />

                    <RadioButton
                        android:id="@+id/rbtNFP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:text="Not-for-profit"
                        android:textColor="#595050" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/edtProjectCompany"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_field"
            android:ems="10"
            android:hint="Company"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edtProjectCountry"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_field"
            android:ems="10"
            android:hint="Country"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCPC"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button"
                android:fontFamily="@font/regular"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/light_gray"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnNextCreateProject"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button"
                android:fontFamily="@font/regular"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/light_gray"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>