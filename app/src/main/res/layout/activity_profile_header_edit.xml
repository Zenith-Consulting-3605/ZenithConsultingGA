<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profiles.ProfileHeaderEdit">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cslTop"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/dark_magenta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imvClose"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cross" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:text="Save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/txvFName"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:hint="First name"
        android:text="First name"
        android:inputType="textPersonName"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txvLName"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:hint="Last name"
        android:text="Last name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txvFName"
        app:layout_constraintTop_toBottomOf="@+id/txvFName" />

    <EditText
        android:id="@+id/txvLocation"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:hint="Location"
        android:text="Location"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txvLName"
        app:layout_constraintTop_toBottomOf="@+id/txvLName" />

    <EditText
        android:id="@+id/txvOccupation"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:hint="Occupation"
        android:inputType="textPersonName"
        android:text="Occupation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txvLocation"
        app:layout_constraintTop_toBottomOf="@+id/txvLocation" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="First Name"
        android:fontFamily="@font/bold"
        app:layout_constraintBottom_toTopOf="@+id/txvFName"
        app:layout_constraintStart_toStartOf="@+id/txvFName" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="Last name"
        android:fontFamily="@font/bold"
        app:layout_constraintBottom_toTopOf="@+id/txvLName"
        app:layout_constraintStart_toStartOf="@+id/txvLName" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="Location"
        android:fontFamily="@font/bold"
        app:layout_constraintBottom_toTopOf="@+id/txvLocation"
        app:layout_constraintStart_toStartOf="@+id/txvLocation" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="Occupation"
        android:fontFamily="@font/bold"
        app:layout_constraintBottom_toTopOf="@+id/txvOccupation"
        app:layout_constraintStart_toStartOf="@+id/txvOccupation" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="195dp"
        android:fontFamily="@font/bold"
        android:text="Select profile image"
        app:layout_constraintTop_toBottomOf="@id/txvOccupation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/profileOption1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/txvOccupation"
        app:layout_constraintRight_toLeftOf="@id/profileOption2"
        app:layout_constraintTop_toBottomOf="@id/textView12"
        android:src="@drawable/avatar1"
        />

    <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/profileOption2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="@id/textView12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView12"
        app:layout_constraintStart_toEndOf="@id/profileOption1"
        android:src="@drawable/avatar2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>